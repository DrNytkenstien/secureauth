# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Email Configuration (for sending OTPs)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@secureauth.com

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=10

# Session Configuration
SESSION_EXPIRY_HOURS=24
SESSION_SECRET=your_super_secret_key_change_this

# MongoDB Configuration (optional, currently using in-memory)
MONGODB_URI=mongodb://localhost:27017/secureauth

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5
